{
    "name": "ui-api-playground",
    "version": "1.0.0",
    "private": true,
    "description": "UI API Playground",
    "scripts": {
        "lint": "eslint **/lwc/**/*.js",
        "prettier": "prettier --write \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,yaml,yml}\"",
        "prettier:verify": "prettier --check \"**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,yaml,yml}\"",
        "prepare": "husky || true",
        "precommit": "lint-staged"
    },
    "lint-staged": {
        "**/*.{cls,cmp,component,css,html,js,json,md,page,trigger,yaml,yml}": [
            "prettier --write"
        ],
        "**/*.js": [
            "eslint"
        ]
    },
    "author": "pozil",
    "license": "CC0-1.0",
    "devDependencies": {
        "@lwc/eslint-plugin-lwc": "^3.2.0",
        "@prettier/plugin-xml": "^3.4.2",
        "@sa11y/jest": "^8.0.0",
        "@salesforce/eslint-config-lwc": "^4.0.0",
        "@salesforce/eslint-plugin-lightning": "^2.0.0",
        "@salesforce/sfdx-lwc-jest": "^7.1.2",
        "eslint": "^9.38.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-jest": "^29.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "prettier": "^3.6.2",
        "prettier-plugin-apex": "^2.2.6"
    },
    "volta": {
        "node": "22.20.0"
    }
}
